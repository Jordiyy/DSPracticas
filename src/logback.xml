<?xml version="1.0" encoding="UTF-8" ?>
    <configuration>
        <property name="LOG" value="./src/logs/"/>

        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>
                    %d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
                </pattern>
            </encoder>
        </appender>

        <!-- FILE -->

        <appender name="fita_1" class="ch.qos.logback.core.FileAppender">
            <append>true</append>
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
            <file>${LOG}fita_1.log</file>
            <!--
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>DEBUG</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            -->
        </appender>

        <appender name="fita_2" class="ch.qos.logback.core.FileAppender">
            <append>true</append>
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
            <file>${LOG}fita_2.log</file>
            <!--
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>DEBUG</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            -->
        </appender>

        <appender name="HTML" class="ch.qos.logback.core.FileAppender">
            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="ch.qos.logback.classic.html.HTMLLayout">
                    <pattern>%relative%thread%mdc%level%logger%msg</pattern>
                </layout>
            </encoder>
            <file>${LOG}test.html</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>DEBUG</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <root level="info">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="HTML" />
        </root>

        <logger name="Fita1" level="INFO" additivity="false">
            <appender-ref ref="fita_1" />
        </logger>

        <logger name="Fita2" level="DEBUG" additivity="false">
            <appender-ref ref="fita_2" />
        </logger>

        <logger name="Consola" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>

    </configuration>